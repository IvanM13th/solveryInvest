pipeline {
  agent any
  tools {
    maven 'maven'
    }
  stages {
    stage("build") {
      steps {
        echo 'building the application...'
      }
    }
    stage("test") {
      steps {
        echo 'testing the application...'
        sh 'mvn -f /var/lib/jenkins/workspace/my-app-pipeline_feature_jenkins/stocks/pom.xml clean test'
      }
    }
    stage("deploy") {
      steps {
        echo 'deploying the application...'
      }
    }
  }
}
